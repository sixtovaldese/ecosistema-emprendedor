---
const base = import.meta.env.BASE_URL;

---

<footer class="footer">
  <div class="footer-container">
    <!-- Main Footer -->
    <div class="footer-main">
      <!-- Brand Column -->
      <div class="footer-brand">
        <div class="footer-logo">
          <img src={`${base}logo_base_invertido.png`} alt="ECO" class="logo-img" />
        </div>
        <p class="footer-tagline">
          Impulsando ecosistemas de emprendimiento e innovación en América Latina
        </p>
        <div class="footer-social">
          <a href="#" target="_blank" aria-label="Web" class="social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
          </a>
          <a href="#" target="_blank" aria-label="Instagram" class="social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
          </a>
          <a href="#" target="_blank" aria-label="WhatsApp" class="social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
          </a>
        </div>
      </div>

      <!-- Links Columns -->
      <div class="footer-links">
        <div class="footer-column">
          <h3 class="footer-title">Explorar</h3>
          <ul class="footer-list">
            <li><a href={`${base}fundamentos`}>Fundamentos</a></li>
            <li><a href={`${base}modelos`}>Modelos</a></li>
            <li><a href={`${base}actores`}>Actores</a></li>
            <li><a href={`${base}casos`}>Casos de Estudio</a></li>
          </ul>
        </div>

        <div class="footer-column">
          <h3 class="footer-title">Recursos</h3>
          <ul class="footer-list">
            <li><a href={`${base}innovacion`}>Innovación</a></li>
            <li><a href={`${base}recursos`}>Biblioteca</a></li>
            <li><a href={`${base}herramientas`}>Herramientas</a></li>
            <li><a href={`${base}metodologias`}>Metodologías</a></li>
          </ul>
        </div>

        <div class="footer-column">
          <h3 class="footer-title">Contacto</h3>
          <ul class="footer-contact">
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              <a href="mailto:#">#@#.cl</a>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <a href="tel:+569#">+569 #</a>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
              <a href="#" target="_blank" rel="noopener noreferrer">@#</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Newsletter -->
    <div class="footer-newsletter">
      <div class="newsletter-content">
        <h3 class="newsletter-title">Mantente actualizado</h3>
        <p class="newsletter-text">Recibe las últimas novedades sobre ecosistemas de emprendimiento</p>
      </div>
      <form class="newsletter-form">
        <input 
          type="email" 
          placeholder="Tu email" 
          class="newsletter-input"
          required
        />
        <button type="submit" class="newsletter-btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
        </button>
      </form>
    </div>

    <!-- Bottom Footer -->
    <div class="footer-bottom">

      <p class="footer-copyright">
        © {new Date().getFullYear()} #. Todos los derechos reservados.
      </p>
      <div class="footer-credit">
        <span>Desarrollado por</span>
        <a href="https://ago.cl" target="_blank" rel="noopener noreferrer" class="ago-link">
          <img src="https://s3.ago.cl/logo_ago/logo_ago_fondo_oscuro_letras_blancas_tipo_app.webp" alt="AGO Lab" class="ago-logo" />
        </a>
        <span>⚡</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--primary);
    color: var(--secondary);
    margin-top: var(--spacing-3xl);
  }

  .footer-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: var(--spacing-3xl) var(--spacing-lg) var(--spacing-lg);
  }

  /* Main Footer */
  .footer-main {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: var(--spacing-3xl);
    padding-bottom: var(--spacing-3xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Brand */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .footer-logo {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-items: flex-start;
  }

  .logo-img {
    height: 60px;
    width: auto;
    object-fit: contain;
    filter: brightness(0) invert(1); /* Make it white for dark background */
  }

  .footer-tagline {
    color: var(--gray-300);
    line-height: 1.6;
    max-width: 300px;
  }

  /* Social */
  .footer-social {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    color: var(--secondary);
    transition: all var(--transition-base);
  }

  .social-link:hover {
    background: var(--accent-orange);
    transform: translateY(-4px);
  }

  /* Links */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .footer-title {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-xs);
  }

  .footer-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .footer-list a {
    color: var(--gray-300);
    text-decoration: none;
    transition: all var(--transition-base);
    font-size: 0.9375rem;
  }

  .footer-list a:hover {
    color: var(--accent-orange);
    transform: translateX(4px);
  }

  .footer-contact {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .footer-contact li {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--gray-300);
    font-size: 0.9375rem;
  }

  .footer-contact a {
    color: var(--gray-300);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .footer-contact a:hover {
    color: var(--accent-orange);
  }

  /* Newsletter */
  .footer-newsletter {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-xl);
    padding: var(--spacing-xl) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .newsletter-content {
    flex: 1;
  }

  .newsletter-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--secondary);
    margin-bottom: 0.5rem;
  }

  .newsletter-text {
    color: var(--gray-300);
    font-size: 0.9375rem;
  }

  .newsletter-form {
    display: flex;
    gap: 0;
    max-width: 400px;
    flex: 1;
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full) 0 0 var(--radius-full);
    color: var(--secondary);
    font-size: 1rem;
    transition: all var(--transition-base);
  }

  .newsletter-input:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.15);
    border-color: var(--accent-orange);
  }

  .newsletter-input::placeholder {
    color: var(--gray-400);
  }

  .newsletter-btn {
    padding: 1rem 1.5rem;
    background: var(--accent-orange);
    border: none;
    border-radius: 0 var(--radius-full) var(--radius-full) 0;
    color: var(--secondary);
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .newsletter-btn:hover {
    background: var(--accent-blue);
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
    padding-top: var(--spacing-lg);
    flex-wrap: wrap;
  }

  .footer-logos-bottom {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .footer-logo-link {
    width: 60px;
    height: 60px;
    background: var(--secondary);
    border-radius: var(--radius-md);
    padding: 8px;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-logo-link:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .footer-logo-link img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .footer-copyright {
    color: var(--gray-400);
    font-size: 0.875rem;
  }

  .footer-credit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--gray-400);
    font-size: 0.875rem;
  }

  .footer-credit a {
    color: var(--accent-orange);
    text-decoration: none;
    font-weight: 600;
    transition: color var(--transition-base);
  }

  .footer-credit a:hover {
    color: var(--accent-blue);
  }

  .ago-link {
    display: inline-flex;
    align-items: center;
  }

  .ago-logo {
    height: 20px;
    width: auto;
    vertical-align: middle;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-newsletter {
      flex-direction: column;
      align-items: flex-start;
    }

    .newsletter-form {
      width: 100%;
      max-width: none;
    }
  }

  @media (max-width: 640px) {
    .footer-container {
      padding: var(--spacing-xl) var(--spacing-sm) var(--spacing-sm);
    }

    .footer-links {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
